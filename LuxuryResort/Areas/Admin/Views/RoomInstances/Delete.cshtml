@model LuxuryResort.Areas.Admin.Models.RoomInstance

@{
    ViewData["Title"] = "Xác nhận xóa phòng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Xác nhận xóa phòng</h1>
    <h3 class="text-danger">Bạn có chắc chắn muốn xóa phòng này không?</h3>

    <div class="card shadow mb-4">
        <div class="card-header">
            Thông tin phòng
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    Số phòng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RoomNumber)
                </dd>
                <dt class="col-sm-2">
                    Hạng phòng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Room.Type)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>