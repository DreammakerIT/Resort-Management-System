@model LuxuryResort.Areas.Admin.Models.RoomInstance

@{
    ViewData["Title"] = "Thêm phòng mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">
                    <i class="fas fa-plus-circle"></i>
                    Thêm Phòng Mới
                </h1>
                <p class="page-subtitle">Tạo phòng mới cho khách sạn</p>
            </div>
            <a asp-action="Index" class="btn-create">
                <i class="fas fa-arrow-left"></i>
                Quay lại danh sách
            </a>
        </div>
    </div>

    <!-- Main Form Card -->
    <div class="main-card">
        <div class="card-header">
            <h2 class="card-title">
                <i class="fas fa-edit"></i>
                Thông tin phòng
            </h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" id="createRoomForm">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="RoomNumber" class="form-label">
                                <i class="fas fa-hashtag"></i>
                                Số phòng *
                            </label>
                            <input asp-for="RoomNumber" class="form-control form-control-lg" 
                                   placeholder="Ví dụ: 101, 205A, Villa-03..." required />
                            <span asp-validation-for="RoomNumber" class="text-danger"></span>
                            <div class="form-text">Nhập số phòng duy nhất để dễ dàng quản lý</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            <label asp-for="RoomId" class="form-label">
                                <i class="fas fa-bed"></i>
                                Hạng phòng *
                            </label>
                            <select asp-for="RoomId" class="form-control form-control-lg" asp-items="ViewBag.RoomId" required>
                                <option value="">-- Chọn hạng phòng --</option>
                            </select>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                            <div class="form-text">Chọn loại phòng phù hợp với số phòng</div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-5">
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn-create">
                            <i class="fas fa-plus"></i>
                            Tạo phòng mới
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times"></i>
                            Hủy bỏ
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Đảm bảo form validation hoạt động
            $('#createRoomForm').on('submit', function(e) {
                var isValid = true;
                
                // Kiểm tra số phòng
                var roomNumber = $('#RoomNumber').val().trim();
                if (!roomNumber) {
                    $('#RoomNumber').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#RoomNumber').removeClass('is-invalid');
                }
                
                // Kiểm tra hạng phòng
                var roomId = $('#RoomId').val();
                if (!roomId) {
                    $('#RoomId').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#RoomId').removeClass('is-invalid');
                }
                
                if (!isValid) {
                    e.preventDefault();
                    alert('Vui lòng điền đầy đủ thông tin bắt buộc!');
                }
            });
            
            // Xóa class invalid khi user nhập
            $('#RoomNumber, #RoomId').on('input change', function() {
                $(this).removeClass('is-invalid');
            });
        });
    </script>
}

@section Styles {
    <style>
