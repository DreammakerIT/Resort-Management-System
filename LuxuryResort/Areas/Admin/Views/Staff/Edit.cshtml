@model LuxuryResort.Areas.Admin.Models.EditStaffViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin Nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1>@Model.FullName</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="edit-staff-container">
    <div class="profile-sidebar">
        <div class="dashboard-panel">
            <div class="panel-body text-center">
                <div class="profile-avatar">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h3 class="profile-name">@Model.FullName</h3>
                <p class="profile-email">@Model.Email</p>
                <div class="profile-roles">
                    @foreach (var role in Model.UserRoles)
                    {
                        <span class="role-badge">@role</span>
                    }
                </div>
            </div>
        </div>
        <div class="dashboard-panel danger-zone">
            <div class="panel-header">
                <h3 style="text-align: center">Khu vực nguy hiểm</h3>
            </div>
            <div class="panel-body">
                <p>Xóa tài khoản này sẽ không thể hoàn tác.</p>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger-outline">
                    <i class="fas fa-trash-alt"></i> Xóa nhân viên
                </a>
            </div>
        </div>
    </div>

    <div class="form-panel">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="dashboard-panel">
                <div class="panel-header">
                    <h3 style="text-align: center; margin-top: auto">Thông tin cơ bản</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="dashboard-panel">
                <div class="panel-header">
                    <h3 style="text-align: center">Thiết lập mật khẩu</h3>
                </div>
                <div class="panel-body">
                    <p class="text-muted">Để trống nếu bạn không muốn thay đổi mật khẩu.</p>
                    <div class="form-group">
                        <label asp-for="NewPassword"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="dashboard-panel">
                <div class="panel-header">
                    <h3 style="text-align: center">Vai trò & Quyền hạn</h3>
                </div>
                <div class="panel-body">
                    @foreach (var role in Model.AllRoles)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="UserRoles" value="@role"
                                   @(Model.UserRoles.Contains(role) ? "checked" : "") />
                            <label class="form-check-label">@role</label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>