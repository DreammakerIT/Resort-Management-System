@model LuxuryResort.Models.Room

@{
    ViewData["Title"] = "Xác nhận Xóa Hạng phòng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="delete-container">
    <div class="delete-icon">
        <i class="fas fa-bed"></i>
    </div>

    <h1 class="delete-title">Bạn có chắc chắn?</h1>
    <p class="delete-subtitle">
        Hành động này sẽ xóa vĩnh viễn hạng phòng <br><strong>@Model.Type</strong>.
        <br>
        Bạn sẽ không thể hoàn tác hành động này.
    </p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="delete-actions">
            <a asp-action="Index" class="btn btn-secondary-outline">Hủy Bỏ</a>
            <button type="submit" class="btn btn-danger-solid">Tôi hiểu, Xóa Hạng phòng</button>
        </div>
    </form>
</div>