@model LuxuryResort.Models.Room
@{
    ViewData["Title"] = "Thêm Hạng phòng mới"; Layout = "_AdminLayout";
}

<div class="page-header"><h1>@ViewData["Title"]</h1></div>
<div class="form-panel">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group"><label asp-for="Type"></label><input asp-for="Type" class="form-control" /></div>
        <div class="form-group"><label asp-for="Description"></label><textarea asp-for="Description" class="form-control"></textarea></div>
        <div class="form-group"><label asp-for="ImageUrl"></label><input asp-for="ImageUrl" class="form-control" /></div>
        <div class="form-group"><label asp-for="PricePerNight"></label><input asp-for="PricePerNight" class="form-control" /></div>
        <div class="form-group"><label asp-for="MaxOccupancy"></label><input asp-for="MaxOccupancy" class="form-control" /></div>
        <div class="form-group">
            <label asp-for="MaxChildren"></label>
            <input asp-for="MaxChildren" class="form-control" />
        </div>
        <div class="form-group"><label asp-for="Area"></label><input asp-for="Area" class="form-control" /></div>
        <div class="form-buttons">
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            <button type="submit" class="btn btn-success">Tạo mới</button>
        </div>
    </form>
</div>