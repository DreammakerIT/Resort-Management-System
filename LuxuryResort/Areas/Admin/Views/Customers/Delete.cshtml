@using LuxuryResort.Areas.Identity.Data
@model LuxuryResortUser

@{
    ViewData["Title"] = "Xác nhận Xóa Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="delete-container">
    <div class="delete-icon">
        <i class="fas fa-user-slash"></i>
    </div>

    <h1 class="delete-title">Bạn có chắc chắn?</h1>
    <p class="delete-subtitle">
        Hành động này sẽ xóa vĩnh viễn tài khoản của khách hàng <br><strong>@Model.FullName</strong> (@Model.Email).
        <br>
        Toàn bộ lịch sử đặt phòng của họ cũng sẽ bị ảnh hưởng.
    </p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="delete-actions">
            <a asp-action="Index" class="btn btn-secondary-outline">Hủy Bỏ</a>
            <button type="submit" class="btn btn-danger-solid">Tôi hiểu, Xóa tài khoản</button>
        </div>
    </form>
</div>